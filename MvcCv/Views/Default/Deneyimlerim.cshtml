@using MvcCv.Models.Entity
@model List<Tbl_Deneyimlerim>

<div class="resume-section-content">
    <h2 class="mb-5"><span style="color:darkorange;">İş</span> <span style="color:black;">Təcrübə</span> </h2>
    @foreach (var x in Model)
    {
    <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
        <div class="flex-grow-1">
            <h3 class="mb-0"style="color:blueviolet;">@x.Baslik</h3>
            <div class="subheading mb-3"style="color: blueviolet;">@x.AltBaslik</div>
            <p style="color:forestgreen">@x.Aciklama</p>
        </div>
        <div class="flex-shrink-0"><span class="text-primary">@x.Tarih</span></div>
    </div>
    }

</div>
