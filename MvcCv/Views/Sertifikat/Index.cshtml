@using MvcCv.Models.Entity
@model List<Tbl_Sertifikalarim>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div><!-- /.card-header -->
                        <div class="card-body">


                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                @foreach (var x in Model)
                                {
                                    <div class="timeline timeline-inverse">
                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-blue">
                                                @x.Tarih
                                            </span>
                                        </div>
                                        <!-- /.timeline-label -->
                                        <!-- timeline item -->
                                        <div>
                                            <i class="fas fa-edit bg-primary"></i>
                                            <div class="timeline-item">

                                                <div class="timeline-body" style="color:blue; background-color:#f6dddd">

                                                    <div>
                                                        <strong>
                                                            @x.Aciklama
                                                        </strong>
                                                    </div>


                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="/Sertifikat/Duzenle/@x.ID" class="btn btn-warning btn-sm">Güncəllə</a>
                                                    <a href="/Sertifikat/SertifikatSil/@x.ID" class="btn btn-danger btn-sm">Sil</a>

                                                </div>
                                            </div>
                                        </div>


                                    </div>
                                }
                            </div>

                        </div>

                        <a href="/Sertifikat/SertifikatEKle/" class="btn btn-success btn-sm">Əlavə Et</a>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        
    </section>
</body>
</html>